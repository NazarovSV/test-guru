<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="nav user"><%= link_to 'Test Guru', root_path%></p>
    <% if logged_in? %>
      <p class="nav user">Welcome, <b><%= current_user.email %></b> Guru | <%= link_to 'Logout', logout_path, method: :delete %>
      </p>
    <%else%>
      <p class="nav user">
        <%= link_to 'Registration', signup_path, method: :get %> | 
        <%= link_to 'Login', login_path, method: :get %>
      </p>
    <% end %>

    <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>
