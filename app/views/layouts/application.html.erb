<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="nav user"><%= link_to 'Test Guru', root_path%></p>
    <% if user_signed_in? %>
      <p class="nav user"><%= raw t('.welcome', email: current_user.email) %> | <%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
      </p>
    <%else%>
      <p class="nav user">
        <%= link_to t('.registration'), new_user_registration_path, method: :get %> | 
        <%= link_to t('.login'), new_user_session_path, method: :get %>
      </p>
    <% end %>

    <%= render 'shared/flash' %>

    <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>
