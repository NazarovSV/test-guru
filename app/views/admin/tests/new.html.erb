<h4 align="center"><%= t('.header') %></h4>
<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <div class="card mt-5">
      <div class="card-body border-secondary">
        <%= form_with model: [:admin, @test], local: true do |form| %>
          <%= render 'shared/errors', resource: @test %>
          <p>
            <%= form.label :title, class: "form-laber" %><br>
            <%= form.text_field :title, id: :test_title, class: "form-control" %>
          </p>
          <p>
            <%= form.label :level, class: "form-laber" %><br>
            <%= form.number_field :level, id: :test_level, class: "form-control example-number-input" %>
          </p>
          <p>
            <%= form.label :category_id, class: "form-laber" %><br>
            <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true, class: "form-control" %>
          </p>

          <div class="timer-checkbox">
            <%= form.label :timer, class: 'form-check-label' do %>
              <%= form.check_box :show_timer_input, class: 'form-check-input' %>
              <%= t('.timer') %>                            
            <% end %>            
          </div>
          <%= form.number_field :timer, id: :test_timer, class: "form-control example-number-input hide", min: 0 %>

          <p><%= form.submit class: "btn btn-primary mt-3"%></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb justify-content-center mt-5">
    <li class="breadcrumb-item"><%= link_to t('button.back'), admin_tests_path %></li>
  </ol>
</nav>
