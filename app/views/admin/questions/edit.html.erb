<h2><%= question_header(@question) %></h2>
<%= form_with model: [:admin, @question], local: true do |form|%>
  <%= render 'shared/errors', resource: @question %>
  <p>
    <%= form.label :body, "#{t('.question')}:" %>
    <%= form.text_field :body, id: :question_body %>
  </p>
  <%= form.submit %>
<% end %>
<br/>
<%= link_to t('button.back'), admin_test_path(@question.test) %>