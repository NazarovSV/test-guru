<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h4 align="center"><%= question_header(@question) %></h4>
    <div class="card mt-5">
      <div class="card-body border-secondary">
        <%= form_with model: [:admin, @question], local: true do |form|%>
          <%= render 'shared/errors', resource: @question %>
          <p class="mt-2">
            <%= form.label :body, "#{t('.question')}:" %>
            <%= form.text_field :body, id: :question_body, class: 'form-control mt-2'%>
          </p>
          <%= form.submit class: "btn btn-primary mt-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br/>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb justify-content-center">
    <li class="breadcrumb-item"><%= link_to t('button.back'), admin_test_path(@question.test) %></li>
  </ol>
</nav>