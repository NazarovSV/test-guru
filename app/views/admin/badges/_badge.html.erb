<tr>
  <td style="vertical-align: middle">
    <%= badge.name %>
  </td>
  <td style="vertical-align: middle">
    <img src="<%= badge.image_url %>">
  </td>  
  <td style="vertical-align: middle">
    <%= link_to t('button.show'), admin_badge_path(badge), class: "btn btn-success btn-sm" %>
  </td>
  <td style="vertical-align: middle">
    <%= link_to t('button.edit'), edit_admin_badge_path(badge), class: "btn btn-warning btn-sm" %>
  </td>
  <td style="vertical-align: middle">
    <%= link_to t('button.destroy'), admin_badge_path(badge), class: "btn btn-danger btn-sm", method: :delete, data: {confirm: t('.confirm')} %>
  </td>
</tr>