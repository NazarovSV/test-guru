<h1>Passing the <%= @test_passage.test.title %> Test</h1>
<br>
<b><%=@test_passage.question_number %> question from <%= pluralize(@test_passage.test.questions.count, 'question', plural: 'questions') %>:</b>
<br>
<p>
  <%= @test_passage.current_question.body %>
</p>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form|%>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :variant, include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>    
  <% end %>
  <p><%= form.submit 'Next' %></p>
<% end %>
<br>
<%= link_to 'Back to tests',  root_path%>
<% %>